<html>
<head><title>Pulse Graphs</title></head>
<body>

<table>
<tr><td valign="top" style="padding-right: 10px">
<form action="/pulse" method="POST">
#foreach ($record in $records)
<b>$record.name</b><br/>
#foreach ($field in $record.fields)
$form.checkbox($field.id, false) $field.name<br/>
#end
#end
<input type="submit" name="submit" value="update">
</form>

</td><td width="100%" valign="top">

#set ($curid = "")
#foreach ($graph in $graphs)
#if ($curid != $graph.field.id)
#if ($curid != "")
<div style="width: 100%; height: 1px; background: #000000; margin: 5px 0px"></div>
#end
#set ($curid = $graph.field.id)
#end
<img src="http://chart.apis.google.com/chart?${graph.chartParams}"/>
#end

</td></tr></table>

</body>
